{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "experimentalDecorators": true,
        "importHelpers": true,
        "paths": {
            "service-composition": ["../../"]
        },
        "typeRoots": [
            "../../node_modules/@types"
        ]
    },
    "include": ["src"],
    "exclude": ["dist"],
    "references": [
        { "path": "../../tsconfig.json" }
    ]
}